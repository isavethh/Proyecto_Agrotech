WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./
RUN npm ci

# Copiar c贸digo fuente
COPY . .

# Build de producci贸n
RUN npm run build

# Etapa de producci贸n con nginx
FROM nginx:alpine

# Copiar configuraci贸n de nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

